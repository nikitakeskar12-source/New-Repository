#include <iostream>
using namespace std;

char board[3][3] = {
    {' ', ' ', ' '},
    {' ', ' ', ' '},
    {' ', ' ', ' '}
};

const char HUMAN = 'X';
const char AI = 'O';

// Function to print board
void printBoard() {
    cout << "\n";
    for (int i = 0; i < 3; i++) {
        cout << " ";
        for (int j = 0; j < 3; j++) {
            cout << board[i][j];
            if (j < 2) cout << " | ";
        }
        cout << "\n";
        if (i < 2) cout << "---+---+---\n";
    }
    cout << "\n";
}

// Check if moves left
bool movesLeft() {
    for (int i = 0; i < 3; i++)
        for (int j = 0; j < 3; j++)
            if (board[i][j] == ' ')
                return true;
    return false;
}

// Evaluate board
int evaluate() {
    // Rows & Columns
    for (int i = 0; i < 3; i++) {
        if (board[i][0] == board[i][1] &&
            board[i][1] == board[i][2]) {
            if (board[i][0] == AI) return +10;
            if (board[i][0] == HUMAN) return -10;
        }

        if (board[0][i] == board[1][i] &&
            board[1][i] == board[2][i]) {
            if (board[0][i] == AI) return +10;
            if (board[0][i] == HUMAN) return -10;
        }
    }

    // Diagonals
    if (board[0][0] == board[1][1] &&
        board[1][1] == board[2][2]) {
        if (board[0][0] == AI) return +10;
        if (board[0][0] == HUMAN) return -10;
    }

    if (board[0][2] == board[1][1] &&
        board[1][1] == board[2][0]) {
        if (board[0][2] == AI) return +10;
        if (board[0][2] == HUMAN) return -10;
    }

    return 0;
}

// Minimax algorithm
int minimax(bool isAI) {
    int score = evaluate();

    if (score == 10 || score == -10)
        return score;

    if (!movesLeft())
        return 0;

    if (isAI) {
        int best = -1000;
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                if (board[i][j] == ' ') {
                    board[i][j] = AI;
                    best = max(best, minimax(false));
                    board[i][j] = ' ';
                }
            }
        }
        return best;
    } else {
        int best = 1000;
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                if (board[i][j] == ' ') {
                    board[i][j] = HUMAN;
                    best = min(best, minimax(true));
                    board[i][j] = ' ';
                }
            }
        }
        return best;
    }
}

// Find best move for AI
void bestMove() {
    int bestVal = -1000;
    int row = -1, col = -1;

    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            if (board[i][j] == ' ') {
                board[i][j] = AI;
                int moveVal = minimax(false);
                board[i][j] = ' ';

                if (moveVal > bestVal) {
                    row = i;
                    col = j;
                    bestVal = moveVal;
                }
            }
        }
    }
    board[row][col] = AI;
}

int main() {
    int r, c;
    cout << "TIC TAC TOE (You = X, AI = O)\n";

    while (true) {
        printBoard();

        cout << "Enter your move (row col): ";
        cin >> r >> c;

        if (board[r][c] != ' ') {
            cout << "Invalid move!\n";
            continue;
        }

        board[r][c] = HUMAN;

        if (evaluate() == -10) {
            printBoard();
            cout << "You win!\n";
            break;
        }

        if (!movesLeft()) {
            printBoard();
            cout << "Draw!\n";
            break;
        }

        bestMove();

        if (evaluate() == 10) {
            printBoard();
            cout << "AI wins!\n";
            break;
        }

        if (!movesLeft()) {
            printBoard();
            cout << "Draw!\n";
            break;
        }
    }
    return 0;
}
